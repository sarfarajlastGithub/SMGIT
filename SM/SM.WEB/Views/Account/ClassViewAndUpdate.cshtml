@model SM.LIB.VM.Account.ClassViewAndUpdateModel
@{
    bool val = Convert.ToBoolean(ViewBag.Complete);
    if (val)
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_LayoutEmptyInfo.cshtml";
    }

}

@section newStyle{
    <link rel="stylesheet" type="text/css" href="~/assets/lib/datetimepicker/css/bootstrap-datetimepicker.min.css" />
}
@*<style>
        .bigFont {
            font-size: medium;
        }
    </style>*@

    <div class="row">
    <h2 class="page-head-title">School Profile</h2>

    <div class="col-sm-7">
        <div class="panel panel-default panel-table">
            <div style="background-color:dodgerblue">
                <div class="panel-heading bigFont">
                    Basic Info
                </div>
            </div>

            <div class="panel-body panel-border">
                <div class="panel-heading">
                    @using (Ajax.BeginForm("ClassViewAndUpdate", "Account", new AjaxOptions
                    {
                        HttpMethod = "post",
                        InsertionMode = InsertionMode.Replace,
                        UpdateTargetId = "clasajaxLoad"
                    }))
                    {
                        <div class="form-group">
                            <p class="pull-right">Select Multiple Section according to class</p>
                        </div>
                        <hr />
                        <div class="form-group">
                            <br />
                            <br />
                            <div class="col-sm-4">
                                <label class="col-sm-3 control-label">Class</label>

                                @Html.EnumDropDownListFor(m => m.ClassName, new { @class = "form-control" })
                            </div>
                            <div class="col-sm-8">
                                <div class="form-group">
                                    <label class="col-sm-8 control-label">Section</label>
                                    <div class="col-sm-6">
                                        <div class="be-checkbox">
                                            <input id="check3" name="A" type="checkbox">
                                            <label for="check3">A</label>
                                        </div>
                                        <div class="be-checkbox">
                                            <input id="check4" name="B" type="checkbox">
                                            <label for="check4">B</label>
                                        </div>
                                        <div class="be-checkbox">
                                            <input id="check5" name="C" type="checkbox">
                                            <label for="check5">C</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="be-checkbox">
                                            <input id="check6" name="D" type="checkbox">
                                            <label for="check6">D</label>
                                        </div>
                                        <div class="be-checkbox">
                                            <input id="check7" name="E" type="checkbox">
                                            <label for="check7">E</label>
                                        </div>
                                        <div class="be-checkbox">
                                            <input id="check8" name="F" type="checkbox">
                                            <label for="check8">F</label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <br />
                                <br />
                                <button type="submit" @*style="margin-left:25%"*@ class="btn btn-primary btn-space btn-xl" >Add</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>


        @Html.Partial("_AddClassPartial", Model);

</div>





@section scripts{


    <script src="~/assets/lib/jquery-ui/jquery-ui.min.js" type="text/javascript"></script>
    <script src="~/assets/lib/jquery.nestable/jquery.nestable.js" type="text/javascript"></script>
    <script src="~/assets/lib/moment.js/min/moment.min.js" type="text/javascript"></script>
    <script src="~/assets/lib/datetimepicker/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>

}
