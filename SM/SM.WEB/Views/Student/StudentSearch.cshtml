@model SM.LIB.VM.Student.StudentSearchVM
@{
    ViewBag.Title = "StudentSearch";
}

@section newStyle{
    <link rel="stylesheet" type="text/css" href="~/assets/lib/datatables/css/dataTables.bootstrap.min.css" />
<style>
    .ui-dialog-titlebar-close {
        margin-top:20px;
        width: 60px !important;
        height: 40px !important;
        top: 40% !important;
        color:black;
        background-color:red;
        border-radius:5px;
    }
</style>
    @*<link href="~/Content/themes/base/dialog.css" rel="stylesheet" />*@
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                Search Students
                <div class="tools">@*<span class="icon mdi mdi-download"></span><span class="icon mdi mdi-more-vert"></span>*@</div>
                <span class="panel-subtitle">Here you can search All students in a specific way</span>
            </div>
            <div class="panel-body">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="col-sm-6">
                            @Html.LabelFor(s => s.TenureName)
                            @Html.EnumDropDownListFor(s => s.TenureName, "Select Tenure", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(s => s.Sclass)
                            @Html.EnumDropDownListFor(s => s.Sclass, "Select Class", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="col-sm-6">
                            @Html.LabelFor(s => s.SSection)
                            @Html.EnumDropDownListFor(s => s.SSection, "Select Class", new { @class = "form-control" })
                        </div>
                        <div class="col-sm-6 xs-pt-5">
                            <label>Active</label>
                            <select id="IsActive">
                                <option value="">All</option>
                                <option value="True" selected>True</option>
                                <option value="False">False</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label>Name</label>
                            <input type="text" class="form-control" id="txtStuName" />

                        </div>
                        <div class="col-sm-4" style="margin:28px 0px 0px 10px;">
                            @*<button data-dismiss="modal" id="btnSearch" style="padding:0px 80px 0px;" type="button" class="btn btn-primary btn-xl">Search</button>*@
                            <input type="button" value="Search" id="btnSearch" />

                        </div>
                    </div>
                </div>
            </div>

            @* This is for data tables *@
            <div class="panel-body tablecontainer">
                <table style="" id="table2" class="table table-striped table-hover table-fw-widget">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Session</th>
                            <th>Active</th>
                            <th>Details</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>


@section scripts{


    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @Scripts.Render("~/bundles/datatbl")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>

    <script>
        $(document).ready(function () {


            //jQuery DataTables initialization
            $('#table2').DataTable({
                "processing": true, // for show processing bar
                "serverSide": true, // for process on server side
                "orderMulti": false, // for disable multi column order
                "dom": '<"top"i>rt<"bottom"lp><"clear">', // for hide default global search box // little confusion? don't worry I explained in the tutorial website
                "ajax": {
                    "url": "/student/LoadStudent",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                        { "data": "StudentName", "name": "StudentName", "autoWidth": true }, //index 0
                        { "data": "StuClass", "name": "StuClass", "autoWidth": true }, //index 1
                        { "data": "StuSection", "name": "StuSection", "autoWidth": true },             //index 2
                        { "data": "TenureYear", "name": "TenureYear", "autoWidth": true },         //index 3
                        { "data": "IsActive", "name": "IsActive", "autoWidth": true },   //index 4

                         {
                             "data": "StudentProfileId", "width": "50px", "render": function (data) {
                                 return '<a class="popup ui-btn ui-corner-all ui-shadow ui-btn-inline" href="/student/details/' + data + '">Details</a>';
                             }
                         }

                ]
            });

            //Apply Custom search on jQuery DataTables here
            oTable = $('#table2').DataTable();
            $('#btnSearch').click(function () {
                //Apply search for Employee Name // DataTable column index 0
                oTable.columns(0).search($('#txtStuName').val().trim());
                //Apply search for Country // DataTable column index 3
                oTable.columns(1).search($('#Sclass option:selected').val().trim());
                oTable.columns(2).search($('#SSection option:selected').val().trim());
                oTable.columns(3).search($('#TenureName option:selected').val().trim());
                oTable.columns(4).search($('#IsActive option:selected').val().trim());
                //hit search on server
                oTable.draw();
            });

            /////
            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            })
            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');

                });

                $dialog = $('<div class="popupWindow" style="overflow:auto; margin-left:5px; background-color:cadetblue;"></div>')
                          .html($pageContent)
                          .dialog({
                              draggable: false,
                              autoOpen: false,
                              resizable: false,
                              header: false,
                              model: true,
                              title: '',
                              height: 550,
                              width: 900,
                              dialogClass: 'no-close success-dialog',
                              close: function () {
                                  $dialog.dialog('destroy').remove();
                              }
                          })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type: "POST",
                        url: url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                //oTable.ajax.reload();
                            }
                        }
                    })

                    e.preventDefault();
                })
                $dialog.dialog('open');
            }


            ////tHIS ONE END OF BRACKET
        });

    </script>


}
