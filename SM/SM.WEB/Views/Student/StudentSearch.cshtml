@model SM.LIB.VM.Student.StudentSearchVM
@{
    ViewBag.Title = "StudentSearch";
}

@section newStyle{
    <link rel="stylesheet" type="text/css" href="~/assets/lib/datatables/css/dataTables.bootstrap.min.css" />
}

<div class="row">
    <div class="col-sm-12">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                Search Students
                <div class="tools">@*<span class="icon mdi mdi-download"></span><span class="icon mdi mdi-more-vert"></span>*@</div>
                <span class="panel-subtitle">Here you can search All students in a specific way</span>
            </div>
            <div class="panel-body">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label>Tenure</label>
                            <input type="text" class="form-control" id="txtEmployeeName" />
                        </div>
                        <div class="col-sm-6">
                            <label>Class</label>
                            <input type="text" class="form-control" id="txtEmployeeName" />
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label>Section</label>
                            <input type="text" class="form-control" id="txtEmployeeName" />
                        </div>
                        <div class="col-sm-6 xs-pt-5">
                            <label>Active</label>
                            <div class="switch-button switch-button-yesno ckck">
                                <input type="checkbox" checked="" name="IsAct" id="IsAct" value="1"><span>
                                    <label class="ckck" for="IsAct"></label>
                                </span>
                            </div>
                        </div>
                        @*<div class="col-sm-6">
                            <label>Active</label>
                            @Html.CheckBoxFor(s => s.IsActive)
                            <input type="text" class="form-control" id="txtEmployeeName" />
                        </div>*@
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <div class="col-sm-6">
                            <label>Name</label>
                            <input type="text" class="form-control" id="txtEmployeeName" />

                        </div>
                        <div class="col-sm-4" style="margin:28px 0px 0px 10px;">
                                <button data-dismiss="modal" style="padding:0px 80px 0px;" type="submit" class="btn btn-primary btn-xl">Search</button>


                        </div>
                    </div>
                </div>


            </div>
            <div class="panel-body">
                <table id="table2" class="table table-striped table-hover table-fw-widget">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Section</th>
                            <th>Session</th>
                            <th>Active</th>
                        </tr>
                    </thead>

                </table>
            </div>
        </div>
    </div>
</div>


@section scripts{
    @Scripts.Render("~/bundles/datatbl")


    <script>
        $(document).ready(function () {

            //jQuery DataTables initialization
            $('#table2').DataTable({
                "processing": true, // for show processing bar
                "serverSide": true, // for process on server side
                "orderMulti": false, // for disable multi column order
                "dom": '<"top"i>rt<"bottom"lp><"clear">', // for hide default global search box // little confusion? don't worry I explained in the tutorial website
                "ajax": {
                    "url": "/student/LoadStudent",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                        { "data": "StudentName", "name": "StudentName", "autoWidth": true }, //index 0
                        { "data": "StuClass", "name": "StuClass", "autoWidth": true }, //index 1
                        { "data": "StuSection", "name": "StuSection", "autoWidth": true },             //index 2
                        { "data": "TenureYear", "name": "TenureYear", "autoWidth": true },         //index 3
                        { "data": "IsActive", "name": "IsActive", "autoWidth": true },      //index 4

                ]
            });

            //Apply Custom search on jQuery DataTables here
            oTable = $('#myTable').DataTable();
            $('#btnSearch').click(function () {
                //Apply search for Employee Name // DataTable column index 0
                oTable.columns(0).search($('#txtEmployeeName').val().trim());
                //Apply search for Country // DataTable column index 3
                oTable.columns(3).search($('#ddCountry').val().trim());
                //hit search on server
                oTable.draw();
            });
        });

    </script>


}
<!--This is for Initialize-->
@section initMethod{
    @*App.dataTables();*@
}
